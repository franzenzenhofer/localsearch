{
  "manifest_version": 3,
  "name": "LocalSearch - Private File Search",
  "version": "1.0.0",
  "description": "Private, offline document search. Search PDF, DOCX, TXT, MD, CSV files instantly.",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LocalSearch"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [{
    "resources": ["shared/*"],
    "matches": ["<all_urls>"]
  }]
}