{
  "manifest_version": 2,
  "name": "LocalSearch - Private File Search",
  "version": "1.0.0",
  "description": "Private, offline document search. Search PDF, DOCX, TXT, MD, CSV files instantly.",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LocalSearch"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": ["shared/*"]
}