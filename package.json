{
  "name": "localsearch",
  "private": true,
  "version": "1.30.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run lint",
    "build": "vite build",
    "predeploy": "npm run version:bump:minor && npm run build",
    "deploy": "node scripts/deploy-complete.js",
    "deploy:preview": "wrangler pages deploy dist --project-name=localsearch-preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:post-deploy": "node scripts/post-deploy-tests.js",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint . --ext ts,js,tsx,jsx --report-unused-disable-directives --max-warnings 20",
    "lint:fix": "eslint . --ext ts,js,tsx,jsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "version:bump:patch": "node scripts/version-bump.js patch",
    "version:bump:minor": "node scripts/version-bump.js minor",
    "version:bump:major": "node scripts/version-bump.js major",
    "precommit": "npm run lint && npm run typecheck && npm run version:bump:patch",
    "quality:check": "npm run test:run && npm run typecheck && npm run lint",
    "build:extensions": "node build-extensions.js",
    "cli": "tsx cli.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.5.0",
    "@types/papaparse": "^5.3.16",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.11.0",
    "gh-pages": "^6.1.0",
    "happy-dom": "^15.7.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.8.3",
    "vite": "^5.4.8",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.0",
    "workbox-window": "^7.1.0"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "clsx": "^2.1.1",
    "comlink": "^4.4.1",
    "dexie": "^3.2.4",
    "fflate": "^0.8.1",
    "franc": "^6.1.0",
    "jschardet": "^3.0.0",
    "lucide": "^0.544.0",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.6.0",
    "minisearch": "^6.3.0",
    "papaparse": "^5.4.1",
    "pdfjs-dist": "^4.0.269",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "stopword": "^2.0.8",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.20.5"
  }
}
