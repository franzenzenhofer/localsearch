{
  "manifest_version": 2,
  "name": "LocalSearch",
  "version": "1.0.0",
  "description": "Private, offline folder search",
  "permissions": ["storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "LocalSearch"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}